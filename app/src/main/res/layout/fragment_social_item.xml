<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_fragment_social_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/iv_fragment_social_item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_play_youtube_video_70dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_fragment_social_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_6"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:background="@color/bg_social_media_text"
        android:paddingLeft="@dimen/padding_8"
        android:paddingRight="@dimen/padding_8"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>