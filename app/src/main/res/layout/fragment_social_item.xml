<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_fragment_social_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/iv_fragment_social_item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_play_youtube_video_70dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_fragment_social_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_6"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:background="@color/bg_social_media_text"
        android:paddingLeft="@dimen/padding_8"
        android:paddingRight="@dimen/padding_8"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8">
        <TextView
            android:id="@+id/tv_fragment_social_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_fragment_social_media_user"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_fragment_social_item_avatar"
            android:layout_toLeftOf="@id/tv_fragment_social_item_user_name"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>